@model ITM.Models.MeritList
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:80px;">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <div class="row">
                            <h1>Delete</h1>

                            <h3>Are you sure you want to delete this?</h3>
                            <div>
                                <h4>Merit</h4>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.MeritName)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.MeritName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.MeritPer)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.MeritPer)
                                    </dd>
                                </dl>

                                <form asp-action="Merit_Delete">
                                    <input type="hidden" asp-for="MeritId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    <a asp-action="Merit">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


