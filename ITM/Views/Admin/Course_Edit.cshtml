@model ITM.Models.CourseItm
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container" style="margin-top:80px;">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Edit Course</div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            <form asp-controller="Admin" asp-action="Course_Edit" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-md-6 col-lg-4">
                                    <input type="hidden" asp-for="Courseid" />
                                    <div class="form-group">
                                        <label asp-for="Coursename">Name</label>
                                        <input asp-for="Coursename" type="text" class="form-control" placeholder="Name" />
                                        <span asp-validation-for="Coursename" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Courseimage">Image</label>
                                        <input asp-for="Courseimage" type="file" class="form-control" placeholder="Image" />
                                        <span asp-validation-for="Courseimage" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Courseduration">Duration</label>
                                        <input asp-for="Courseduration" type="number" class="form-control" placeholder="Duration" />
                                        <span asp-validation-for="Courseduration" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Coursefees">Fees</label>
                                        <input asp-for="Coursefees" type="number" class="form-control" placeholder="Fees" />
                                        <span asp-validation-for="Coursefees" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Coursedesc">Description</label>
                                        <textarea asp-for="Coursedesc" type="text" class="form-control" placeholder="Description"></textarea>
                                        <span asp-validation-for="Coursedesc" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Courseteacher">Teacher</label>
                                        <input asp-for="Courseteacher" type="text" class="form-control" placeholder="Teacher" />
                                        <span asp-validation-for="Courseteacher" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CourseDepartId" class="control-label">Department</label>
                                        <select asp-for="CourseDepartId" class="form-control" asp-items="ViewBag.Departments">
                                            <option value="">-- Select Department --</option>
                                        </select>
                                        <span asp-validation-for="CourseDepartId" class="text-danger"></span>
                                    </div>
                                    <div class="card-action">
                                        <input class="btn btn-success" type="submit" value="Submit">
                                        <a asp-action="Courses" class="btn btn-primary">Back to List</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

