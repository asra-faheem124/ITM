@model IEnumerable<ITM.Models.Role>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12" style="margin-top: 80px;">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Roles</h4>
                <a asp-controller="Admin" asp-action="Facility_Form" style="margin-left: auto; display: flex; justify-content: flex-end;">
                    <button class="btn btn-primary btn-round text-right">
                        <i class="fa fa-plus"></i>
                        Add Row
                    </button>
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <table id="add-row"
                       class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Role Id</th>
                            <th>Role Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RoleId</td>
                                <td>@item.RoleName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
