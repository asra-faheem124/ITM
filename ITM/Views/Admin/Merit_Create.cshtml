@model ITM.Models.MeritList
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container" style="margin-top:80px;">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Add Merit</div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            <form asp-controller="Admin" asp-action="Merit_Create" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-md-6 col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="MeritName">Merit Name</label>
                                        <input asp-for="MeritName" type="text" class="form-control" placeholder="Name" />
                                        <span asp-validation-for="MeritName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MeritPer">Percentage</label>
                                        <input asp-for="MeritPer" type="text" class="form-control" placeholder="Percentage" />
                                        <span asp-validation-for="MeritPer" class="text-danger"></span>
                                    </div>
                                    <div class="card-action">
                                        <input class="btn btn-success" type="submit" value="Submit">
                                        <a asp-action="Merit" class="btn btn-primary">Back to List</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
